<div class=container-fluid>
  <h1><%= @place["name"] %></h1>
   <h2>My Posts</h2>
  <div class="row">
    <% for post in @posts %>
      <div class="col-md-3 col-sm-6">
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>
        <p><%= post["description"] %></p>
      </div>
    <% end %>
  </div>
  <p>
    <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-outline-dark">New Post</a>
  </p>

  <p>
    <a href="/places" class="btn btn-outline-dark">Back to All Places</a>
  </p>
</div>