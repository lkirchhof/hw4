<div class="row">
  <h2><%= @place["name"] %></h2>
      <% for post in @posts %>
      <div class="col-md-3 col-sm-6">
        <h4><%= post["title"] %></h4>
        <h5><%= post["posted_on"] %></h5>
        <% if post.uploaded_image.attached? %>
	      <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
	      <% else %>
	      <img src="<%= post["image"] %>" class="img-fluid">
        <% end %>
        <p class="mt-3"><%= post["description"] %></p>
      </div>
      <% end %>
      
   <p>
    <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-outline-dark">New Post</a>
  </p>

  <p>
    <a href="/places" class="btn btn-outline-dark">Back to All Places</a>
  </p>
</div>