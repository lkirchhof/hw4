
  <h1>Login</h1>

  <%= form_with :url => "/sessions" do |form| %>
    <div class="mb-3">
      <%= form.label "E-mail" %>
      <%= form.text_field "email", :class => "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label "Password" %>
      <%= form.password_field "password", :class => "form-control" %>
    </div>
   
      <%= form.submit "Login", class: "btn btn-outline-dark" %>
   
  <% end %>
